<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.RevengeUI.Dark">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorAccent">?android:textColorPrimary</item>
        <item name="colorAccent">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppTheme.CurrentTemperature" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="TextAppearance.AppTheme.CurrentLocation" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppTheme.CurrentCollapsed" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.AppTheme.CurrentExtraTempInfo" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.CurrentExtraTempInfoCollapsed" parent="TextAppearance.AppTheme.CurrentExtraTempInfo">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.AppTheme.ForecastHeader" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.TextIconView"/>
    
    <style name="AppTheme.TextIconView.ExtraData">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="layout_flexBasisPercent">25%</item>
        <item name="iconSize">21dp</item>
        <item name="iconTextVerticalMargin">5dp</item>
        <item name="iconTintColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.TextIconView.ExtraTemp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="iconSize">16sp</item>
        <item name="iconTextHorizontalMargin">5sp</item>
        <item name="iconTintColor">?android:textColorPrimary</item>
        <item name="textAppearance">@style/TextAppearance.AppTheme.CurrentExtraTempInfo</item>
    </style>

</resources>