<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/current_data"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:gravity="center_vertical">

        <com.revengeos.weather.IconTextView
            android:id="@+id/current_min_temp"
            style="@style/AppTheme.TextIconView.ExtraData"
            app:src="@drawable/thermometer_minus" />

        <com.revengeos.weather.IconTextView
            android:id="@+id/current_max_temp"
            style="@style/AppTheme.TextIconView.ExtraData"
            app:src="@drawable/thermometer_plus" />

        <com.revengeos.weather.IconTextView
            android:id="@+id/current_wind"
            style="@style/AppTheme.TextIconView.ExtraData"
            app:src="@drawable/ic_arrow"/>

        <com.revengeos.weather.IconTextView
            android:id="@+id/current_humidity"
            style="@style/AppTheme.TextIconView.ExtraData"
            app:src="@drawable/water_percent" />
    </com.google.android.flexbox.FlexboxLayout>

    <com.revengeos.revengeui.view.ExpandableIndicator
        android:id="@+id/expandable_indicator"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:tint="?android:textColorPrimary"/>
</merge>