<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/forecast_item_vertical_margin"
    android:paddingBottom="@dimen/forecast_item_vertical_margin"
    android:paddingStart="@dimen/forecast_item_horizontal_margin"
    android:paddingEnd="@dimen/forecast_item_horizontal_margin">

    <ImageView
        android:id="@+id/condition_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/sunny"
        app:layout_constraintBottom_toBottomOf="@id/feels_like"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/time" />

    <TextView
        android:id="@+id/time"
        style="@style/TextAppearance.AppTheme.ForecastItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="--:--"
        app:layout_constraintStart_toEndOf="@id/condition_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="13:00" />

    <TextView
        android:id="@+id/temperature"
        style="@style/TextAppearance.AppTheme.ForecastItemHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6sp"
        tools:text="25 gradi"
        app:layout_constraintStart_toEndOf="@id/time"
        app:layout_constraintTop_toTopOf="@id/time" />

    <TextView
        android:id="@+id/feels_like"
        style="@style/TextAppearance.AppTheme.ForecastItemSubhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/time"
        tools:text="Feels like 24 gradi" />

    <com.revengeos.weather.IconTextView
        android:id="@+id/hourly_wind"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/AppTheme.TextIconView.HourlyExtraData"
        tools:text="3 m/s"
        app:src="@drawable/ic_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/time"/>

    <com.revengeos.weather.IconTextView
        android:id="@+id/hourly_humidity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="@style/AppTheme.TextIconView.HourlyExtraData"
        tools:text="75 %"
        app:src="@drawable/water_percent"
        app:layout_constraintTop_toBottomOf="@id/hourly_wind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/feels_like" />

    <rjsv.expframelayout.ExpandableFrameLayout
        android:id="@+id/additional_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/feels_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.revengeos.weather.IconTextView
                android:id="@+id/pressure"
                style="@style/AppTheme.TextIconView.ExtraData"
                app:src="@drawable/gauge" />

            <com.revengeos.weather.IconTextView
                android:id="@+id/visibility"
                style="@style/AppTheme.TextIconView.ExtraData"
                app:src="@drawable/ic_outline_visibility_24" />

            <com.revengeos.weather.IconTextView
                android:id="@+id/precipitations"
                style="@style/AppTheme.TextIconView.ExtraData"
                app:src="@drawable/ic_umbrella_closed_outline" />
        </com.google.android.flexbox.FlexboxLayout>
    </rjsv.expframelayout.ExpandableFrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>