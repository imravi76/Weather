<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint />
        <Constraint
            android:id="@+id/current_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/current_weather_icon_size_collapsed"
            android:layout_height="@dimen/current_weather_icon_size_collapsed"
            android:layout_marginBottom="@dimen/current_weather_vertical_margin_collapsed"
            android:layout_marginEnd="@dimen/current_weather_horizontal_margin_collapsed"
            app:layout_constraintTop_toTopOf="@id/parent"
            android:layout_marginTop="@dimen/current_weather_vertical_margin_collapsed" />
        <Constraint
            android:id="@+id/current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/current_location"
            android:layout_marginStart="@dimen/current_weather_horizontal_margin"
            app:layout_constraintTop_toTopOf="@+id/current_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_icon"
            app:layout_constraintTop_toBottomOf="@+id/current_temperature"
            app:layout_constraintStart_toStartOf="@+id/current_temperature"
            android:alpha="0" />
        <Constraint
            app:layout_constraintStart_toEndOf="@id/current_temperature_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_temperature_end"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/current_temperature_end" />
        <Constraint
            app:layout_constraintEnd_toStartOf="@+id/current_location_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/current_weather_horizontal_margin_collapsed"
            app:layout_constraintTop_toTopOf="@+id/current_icon"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            app:layout_constraintStart_toEndOf="@id/current_location_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/current_temperature_end" />
        <Constraint
            android:id="@+id/current_temp_feels_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_icon"
            app:layout_constraintTop_toBottomOf="@+id/current_location"
            app:layout_constraintStart_toStartOf="@+id/current_temperature_end"
            android:layout_marginTop="5sp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/current_location_end"
            app:layout_constraintStart_toEndOf="@id/current_temperature_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/current_temperature_end"
            android:alpha="1"
            android:layout_marginStart="12dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/current_temperature_end" />
        <Constraint
            android:id="@+id/current_temperature_end"
            app:layout_constraintEnd_toStartOf="@+id/current_location_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/current_temp_feels_like_end"
            android:alpha="1"
            android:layout_marginStart="@dimen/current_weather_horizontal_margin_collapsed"
            app:layout_constraintTop_toTopOf="@+id/current_icon"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/current_temp_feels_like_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/current_icon"
            app:layout_constraintTop_toBottomOf="@+id/current_temperature_end"
            android:alpha="1"
            app:layout_constraintStart_toStartOf="@+id/current_temperature_end" />
        <Constraint />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >
        <OnSwipe
            app:touchAnchorSide="top"
            app:dragDirection="dragUp" />
        <KeyFrameSet >
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_location"
                app:framePosition="60" />
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_temperature"
                app:framePosition="60" />
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_temp_feels_like"
                app:framePosition="60" />
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_location_end"
                app:framePosition="20" />
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_temperature_end"
                app:framePosition="20" />
            <KeyAttribute
                android:alpha="0"
                app:motionTarget="@id/current_temp_feels_like_end"
                app:framePosition="20" />
        </KeyFrameSet>
    </Transition>
</MotionScene>
